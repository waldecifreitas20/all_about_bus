<div class="login-background">
    <form action="/register/add" method="post" class="input-block">
        <label class="lbl-form">Preencha os campos</label>
        <input type="text" name="username" class="login-input" placeholder="Seu nome">
        <small>{{username}}</small>
        <input type="email" name="email" class="login-input" placeholder="Email">
        <small>{{errors.email}}</small>
        <input type="password" name="password" class="login-input" placeholder="Senha">
        <small>{{errors.password}}</small>
        
        <button class="btn btn-footer">Cadastrar</button>
    </div>
</div>